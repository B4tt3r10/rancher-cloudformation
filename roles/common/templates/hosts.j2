{% for host in groups['rancher-server'] %}
{{ hostvars[host].ec2_private_ip_address }} rancher-server-{{loop.index}}
{% endfor %}
{% endif %}
{% if groups['rancher-agent'] is defined %}
{% for host in groups['rancher-agent'] %}
{{ hostvars[host].ec2_private_ip_address }} rancher-agent-{{loop.index}}
{% endfor %}
{% endif %}
